@page "/newnote/confirmation"
@inject NavigationManager NavigationManager



<PageTitle>Confirmation</PageTitle>

<div>
    

<h3>Confirmation</h3>
<p>You have successfully created a new note</p>
</div>
<div>
    <!-- vertical table for confirmation display -->
<table class="table">
    <tr>
        <th>App Name:</th>
        <td>@newNoteConfirm.appName</td>
    </tr>
    <tr>
        <th>Release Note:</th>
        <td>@newNoteConfirm.releaseNote</td>
    </tr>
    <tr>
        <th>Created By</th>
        <td>@newNoteConfirm.createdBy</td>
    </tr>
    <tr>
        <th>Created Date</th>
        <td>@newNoteConfirm.createdDate</td>
    </tr>
</table>
</div>
<div>
    <button type="button" @onclick="NavView" class="btn btn-primary" value="viewrecords">
        <span>View Records</span>
    </button>
</div>




@code {

    //link newly created note from previous page
    ReleaseNote newNoteConfirm = NewNote.newNote;


    protected void NavView()
    {
        NavigationManager.NavigateTo("/viewrecords");
    }



}
